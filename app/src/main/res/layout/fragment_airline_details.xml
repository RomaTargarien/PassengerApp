<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.screens.airline.AirlineDetailsFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cvContainer"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                app:cardElevation="10dp"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/imageContainer"
                    android:layout_width="match_parent"
                    android:background="#03A9F4"
                    android:alpha="0.3"
                    android:layout_height="match_parent">

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ivAirline"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:background="@color/white"
                android:scaleType="centerCrop"
                android:elevation="10dp"
                app:layout_constraintBottom_toBottomOf="@+id/cvContainer"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/cvContainer"
                app:shapeAppearanceOverlay="@style/roundedImageViewRounded">

            </com.google.android.material.imageview.ShapeableImageView>

            <TextView
                android:id="@+id/tvAirlineTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cvContainer"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="28sp"
                tools:text="Emirates"/>

            <TextView
                android:id="@+id/tvAirlineSlogan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:textColor="@color/black"
                android:textSize="22sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvAirlineTitle"
                tools:text="Make your trip with us" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</layout>