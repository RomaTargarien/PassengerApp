<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="airline"
            type="com.example.passengerapp.model.ui.AirlineLayout" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/containerAirline"
        android:layout_width="match_parent"
        android:padding="20dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivAirline"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:imageUrl="@{airline.logo}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvAirlineTitle"
            style="@style/TextTitleStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{airline.name}"
            android:layout_marginStart="10dp"
            android:textColor="@color/dark_violet"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/ivAirline"
            app:layout_constraintTop_toTopOf="@+id/ivAirline"
            tools:text="Airline" />

        <TextView
            android:id="@+id/tvAirlineSlogan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:text="@{airline.slogan}"
            app:layout_constraintStart_toStartOf="@+id/tvAirlineTitle"
            app:layout_constraintTop_toBottomOf="@+id/tvAirlineTitle"
            tools:text="Make airlines great again"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bnChoose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_rounded_rectangle_for_button"
            android:backgroundTint="@color/light_pink"
            android:text="@string/choose"
            android:textColor="@color/dark_violet"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </androidx.appcompat.widget.AppCompatButton>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>